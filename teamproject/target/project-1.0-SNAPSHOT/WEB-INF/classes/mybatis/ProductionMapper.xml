<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yb.team.project.dao.OpreateProduction">


<insert id="insertProduction" parameterType="com.yb.team.project.beans.Production" useGeneratedKeys="true" keyProperty="production_id">
    insert into PRODUCTION(production_name,Production_nums,Production_price) values (#{production_name},#{Production_nums},#{Production_price});
</insert>
<update id="updateProductionByid" parameterType="com.yb.team.project.beans.Production" >
    update PRODUCTION set production_name = "apple",production_nums = 33,Production_price=888888 where production_id= #{production_id};
</update>
<select id="findProductionById" parameterType="com.yb.team.project.beans.Production" resultType="Production">
    select * from PRODUCTION where production_id=#{production_id}
</select>
<delete id="deletUsereProductionById" parameterType="com.yb.team.project.beans.Production" >
    delete from PRODUCTION where production_id = #{production_id}
</delete>

</mapper>