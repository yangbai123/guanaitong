<script>
    function personRegister(obj) {
        var isOk = 0;
        var account = $("#account").val();
        var email = $("#email").val();
        var phoneNumber = $("#phoneNumber").val();
        var checkCode = $("#checkCode").val();
        var password = $("#password").val();
        var companyName = $("#companyName").val();
        var repeatPassword = $("#repeatPassword").val();
        var repeatPassword = $("#repeatPassword").val();
        var licenseKey = $("#licenseKey").val();
        var params = {
            account: account,
            email: email,
            phoneNumber: phoneNumber,
            checkCode: checkCode,
            password: password,
            companyName: companyName,
            licenseKey: licenseKey
        };
//        alert(JSON.stringify(params));
        if (isEmpty(account)) {
            $("#account").addClass("error");
            $("#account").next().show();
            isOk = 1;
        } else {
            $("#account").removeClass("error");
            $("#account").next().hide();
        }
        ;
        if (isEmpty(companyName)) {
            $("#companyName").addClass("error");
            $("#companyName").next().show();
            isOk = 1;
        } else {
            $("#companyName").removeClass("error");
            $("#companyName").next().hide();
        }
        ;
        if (isEmpty(licenseKey)) {
            $("#licenseKey").addClass("error");
            $("#licenseKey").next().show();
            isOk = 1;
        } else {
            $("#licenseKey").removeClass("error");
            $("#licenseKey").next().hide();
        }
        ;
        if (isEmpty(email)) {
            $("#email").addClass("error");
            $("#email").next().text("请输入邮箱").show();
            isOk = 1;
        } else {
            if (!is_email(email)) {
                $("#email").addClass("error");
                $("#email").next().text("请输入正确的邮箱").show();
                isOk = 1;
            } else {
                $("#email").removeClass("error");
                $("#email").next().hide()
            }
        }
        ;
        if (isEmpty(phoneNumber)) {
            $("#phoneNumber").addClass("error");
            $("#phoneNumber").next().text("请输入手机号").show();
            isOk = 1;
        } else {
            if (!is_cellphoneNum(phoneNumber)) {
                $("#phoneNumber").addClass("error");
                $("#phoneNumber").next().text("请输入正确的手机号").show();
                isOk = 1;
            } else {
                $("#phoneNumber").removeClass("error");
                $("#phoneNumber").next().hide()
            }
        }
        ;
        if (isEmpty(password)) {
            $("#password").addClass("error");
            $("#password").next().text("请输入密码").show();
            isOk = 1;
        } else {
            if (password != repeatPassword) {
                $("#password").addClass("error");
                $("#password").next().text("俩次输入密码不一致").show();
                isOk = 1;
            }
            else {
                $("#password").removeClass("error");
                $("#password").next().hide();
            }
        };
        if(!$("#checkbox").is(":checked")){
            $("#check").show();
            isOk=1;
        }else {
            $("#check").hide();
        }
        if (isOk == 0) {
            $.ajax({
                        type: "post",
                        url: "http://localhost:8828/admin/personregistered",
                        data: params,
                        success: function (data) {
                            alert(data);
                            if(data=="success"){
                                window.location.href = "http://localhost:8828/admin/personsuccess";
                            }
                        }
                    }
            );
        }
    };
